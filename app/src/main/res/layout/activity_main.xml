<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TableRow
        android:id="@+id/tblrow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <TextView
            android:id="@+id/usertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:gravity="center"
            android:textSize="30dp"
            android:text="Designer Registration" />
    </TableRow>

    <TableRow
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:id="@+id/textname"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:text="Name" />
        <EditText
            android:id="@+id/tblname"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            />
    </TableRow>

    <TableRow
        android:id="@+id/dobrow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/txtviewdob"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:text="Date of Birth" />
        <EditText
            android:id="@+id/tbldob"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:focusable="false" />
    </TableRow>

    <TableRow
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/txtviewgender"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="23sp" />
        <RadioGroup
            android:id="@+id/tblgender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tblmale"
                android:text="Male" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tblfemale"
                android:text="Female" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tblother"
                android:text="Other" />
        </RadioGroup>
    </TableRow>

    <TableRow
        android:id="@+id/spinnerrow"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/txtviewspiner"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Country"
            android:textSize="23sp"/>
        <Spinner
            android:id="@+id/spinerdata"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
    </TableRow>
    <TableRow
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <TextView
            android:id="@+id/txtviewaddress"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="23sp"/>
        <EditText
            android:id="@+id/tbladdress"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
    </TableRow>
    <TableRow
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/txtviewemail"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textSize="23sp"/>
        <EditText
            android:id="@+id/tblemail"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow
        android:id="@+id/rowemail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <TextView
            android:id="@+id/txtviewphone"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="23sp"/>
        <EditText
            android:id="@+id/tblphone"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow
        android:id="@+id/row5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/txtviewimage"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Image"
            android:textSize="23sp"
            />

        <AutoCompleteTextView
            android:id="@+id/userimage"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            />
    </TableRow>

    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/btnsubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:text="Submit" />
    </TableRow>

    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:text="View" />
    </TableRow>
</TableLayout>